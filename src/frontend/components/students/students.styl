.students

  &__header
    display none
    align-items center
    padding 0 20px 16px 20px

    & span
      display block

      &:nth-child(1)
        width 300px
        margin-left 80px

      &:nth-child(2)
        width 300px

      &:nth-child(3),
      &:nth-child(4)
      &:nth-child(5)
        width 120px

  &__list
    list-style none
    padding 0
    margin 0

    &--empty
      display flex
      padding 16px

      .button
        margin-left 150px

@media(min-width width_desktop)
  .students

    &__header
      display flex

    &__list
      border-radius 6px
      shadow-big()

      &--empty
        padding 13px 20px
