.popup
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color app_color_shadow

  &--open
    display block
    animation fadeIn
    animation-duration 0.5s

  &__window
    display flex
    align-items center
    justify-content center
    position absolute
    box-sizing border-box
    width 265px
    padding 50px
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-color white
    border-radius 6px
    shadow-big()

  &__message
    margin 0
    text-align center

@media (min-width width_desktop)
  .popup

    &__window
        top 100px
        width 600px
        transform translate(-50%, 0)


