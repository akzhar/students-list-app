.students

  &__header
    display flex
    align-items center
    justify-content space-between
    padding 0 20px 16px 20px

    & span
      display block

      &:nth-child(1)
        width 40px

      &:nth-child(2),
      &:nth-child(3)
        width 26%

      &:nth-child(4),
      &:nth-child(5),
      &:nth-child(6)
        width 7%

      &:nth-child(7),
      &:nth-child(8)
        width 30px

  &__list
    list-style none
    padding 24px 20px
    margin 0
    shadow-big()

    &--empty
      display flex

      .button
        margin-left 150px
