.menu
  margin-bottom 32px

  h1
    margin 0
    font-weight 700
    font-size 2.6rem
    line-height 3.2rem

  &__row
    display flex
    justify-content space-between
    margin-bottom 40px

    &:last-child
      margin-bottom 0

  &__search-field,
  &__sort-field
    display flex
    position relative

    &::before
      content ""
      position absolute
      top 50%
      width 20px
      height 20px
      transform translate(0, -50%)

  &__search-field
    width 980px

    & .input
      padding-left 55px

    &::before
      left 20px
      background url("../../img/icons/search-icon.svg") no-repeat center center

  &__sort-field
    width 180px

    & .select
      padding-right 55px
      font-size 0.8rem

    &::before
      right 20px
      background url("../../img/icons/sort-icon.svg") no-repeat center center
