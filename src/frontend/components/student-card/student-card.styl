.card
  position relative
  display flex
  justify-content space-between
  padding 16px
  margin-bottom 10px
  border-radius 6px
  font-size 0.8rem
  line-height 1.2em
  shadow-big()

  &:last-child
    margin-bottom 0

  &::after
    content ""
    position absolute
    top 70px
    left 0
    width 100%
    height 1px
    background-color rgba(0, 0, 0, 0.07)

  &__avatar
    box-sizing border-box
    width 40px
    height 40px
    border 2px solid app_color_shadow
    border-radius 50%

  &__name,
  &__rating,
  &__age,
  &__spec,
  &__group
    margin 0

  &__age,
  &__spec,
  &__group
    position relative
    margin-bottom 5px
    padding-left 13px

    &:last-child
      margin-bottom 0

    &::before
      content ""
      position absolute
      top 50%
      left 0
      width 5px
      height 5px
      transform translate(0, -50%)
      border-radius 50%
      background-color app_color_brand

  &__name
    font-size 1rem
    line-height 1.3em

  &__rating
    position relative
    padding-left 20px

    &::before
      content ""
      position absolute
      top 50%
      left 0
      width 10px
      height 10px
      transform translate(0, -50%)
      background url("../../img/icons/star-icon.svg") no-repeat center center

  &__col-center
    display flex
    flex-direction column

    & .card__wrapper
      display flex
      align-items center
      margin 3px 0 34px 0

      & .fav-color
        margin-right 13px
        border none

@media(min-width width_desktop)
  .card
    align-items center
    justify-content flex-start
    padding 13px 20px
    margin-bottom 0
    font-size 1rem
    line-height 1.3em
    border-radius 0
    box-shadow none

    &::after
      content none

    &__name
      width 300px
      margin-left 40px
      font-size inherit
      line-height inherit

    &__spec
      width 300px

    &__group,
    &__age,
    &__rating
      width 120px

    &__age span
      hide()

    &__age,
    &__spec,
    &__group
      margin 0
      padding-left 0

      &::before
        content none

    &__spec
      order 2

    &__group
      order 3

    &__age
      order 4

    &__rating
      order 1
      padding-left 0

      &::before
        content none

    & .btn-delete
      margin-left auto

    &__col-center
      flex-direction row
      align-items center

      & .card__wrapper
        order 5
        margin 0

        & .fav-color
          order 2
          margin-right 0
          border 2px solid app_color_shadow
