.card
  display flex
  align-items center
  justify-content space-between
  margin-bottom 24px

  &:last-child
    margin-bottom 0

  &__avatar
    box-sizing border-box
    width 40px
    height 40px

  &__name,
  &__spec
    width 26%

  &__group,
  &__age,
  &__rating
    width 7%

  &__avatar,
  &__delete-btn,
  &__fav-color
    border 2px solid rgba(255, 255, 255, 0.6)
    border-radius 50%

  &__delete-btn,
  &__fav-color
    box-sizing border-box
    width 30px
    height 30px

  &__delete-btn
    background white url("../../../public/img/icons/trash-icon.svg") no-repeat center center
    shadow-small()

    &:hover,
    &:active
      opacity 0.6

  &__fav-color

    &--blue
      background: fav_color_blue

    &--red
      background: fav_color_red

    &--green
      background: fav_color_green

    &--yellow
      background: fav_color_yellow

    &--black
      background: fav_color_black

    &--orange
      background: fav_color_orange

    &--rainbow
      background: fav_color_rainbow
