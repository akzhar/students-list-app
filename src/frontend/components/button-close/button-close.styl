.btn-close
	position absolute
	top 10px
	right 10px
	width 1.4rem
	height 1.4rem
	border none
	background-color transparent

	&::before,
	&::after
		content ""
		position absolute
		width 1.4rem
		height 0.2rem
		background-color app_color_brand

	&:hover
		cursor pointer

		&::before,
		&::after
			opacity 0.6

	&:active
		transform translateY(2px)
		opacity 0.8

	&::before
		top 0.6rem
		transform translate(-50%, 0) rotate(-45deg)

	&::after
		bottom 0.6rem
		transform translate(-50%, 0) rotate(45deg)
