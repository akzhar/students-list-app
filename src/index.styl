@import "./const.styl"
@import "./mixin.styl"

@font-face
  font-family 'Geometria-Regular'
  font-display swap
  src: url('./fonts/Geometria-Regular.woff2') format('woff2'),
      url('./fonts/Geometria-Regular.woff') format('woff')

html, body
  font-family 'Geometria-Regular', Arial, sans-serif
  font-size 15px
  line-height 20px
  color app_color_text

body
  margin 0

h1
  margin 0
  font-weight 700
  font-size 2.0rem
  line-height 1.2em

.visually-hidden
  hide()

